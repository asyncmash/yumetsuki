<resources>

    <style name="Base.Theme.App" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.App" parent="Base.Theme.App">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:enforceNavigationBarContrast">false</item>
    </style>

    <style name="Base.Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.App</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_yumetsuki</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:enforceNavigationBarContrast">false</item>
    </style>

    <style name="Theme.App.Splash" parent="Base.Theme.App.Splash" />

    <style name="ThemeOverlay.AppWidget" parent="">
        <item name="backgroundRadius">16dp</item>
        <item name="android:textViewStyle">@style/TextAppearance.Widget</item>
    </style>
</resources>
