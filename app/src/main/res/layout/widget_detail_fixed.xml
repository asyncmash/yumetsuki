<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppWidget">

    <FrameLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/llBody"
        android:layout_alignTop="@+id/llBody"
        android:layout_alignEnd="@+id/llBody"
        android:layout_alignBottom="@+id/llBody"
        android:background="@drawable/rounded_square_sys" />

    <ImageView
        android:id="@+id/compatCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/llBody"
        android:layout_alignTop="@+id/llBody"
        android:layout_alignEnd="@+id/llBody"
        android:layout_alignBottom="@+id/llBody"
        android:contentDescription="@null"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/llSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="8dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp">

            <TextView
                android:id="@+id/tvSyncTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="@string/widget_sample_time_sync"
                android:textColor="@color/widget_font_sub"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/ivRefresh"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@null"
                android:src="@drawable/ic_sync_24" />

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:indeterminateTint="@color/widget_font_sub"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_resin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/iv_resin_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_resin" />

            <TextView
                android:id="@+id/tv_resin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/tv_resin"
                android:layout_toEndOf="@id/iv_resin_icon"
                android:singleLine="true"
                android:text="@string/resin"
                android:textColor="@color/widget_font_main"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_resin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/widget_sample_resin"
                android:textColor="@color/widget_font_main"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_resin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tv_resin_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="18dp"
                android:layout_toStartOf="@id/tv_resin_time"
                android:singleLine="true"
                android:text="@string/replenished"
                android:textColor="@color/widget_font_main"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_resin_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:singleLine="true"
                android:text="@string/widget_sample_time"
                android:textColor="@color/widget_font_main"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_daily_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_daily_commission"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_daily_commission" />

            <TextView
                android:id="@+id/tv_daily_commission_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/tv_daily_commission"
                android:layout_toEndOf="@id/iv_daily_commission"
                android:singleLine="true"
                android:text="@string/daily_commissions"
                android:textColor="@color/widget_font_main"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_daily_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/widget_sample_tasks"
                android:textColor="@color/widget_font_main"
                android:textSize="12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_weekly_boss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/iv_domain"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_domain" />

            <TextView
                android:id="@+id/tv_weekly_boss_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/tv_weekly_boss"
                android:layout_toEndOf="@id/iv_domain"
                android:singleLine="true"
                android:text="@string/enemies_of_note"
                android:textColor="@color/widget_font_main"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_weekly_boss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/widget_sample_tasks"
                android:textColor="@color/widget_font_main"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_realm_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/iv_serenitea_pot"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_serenitea_pot" />

            <TextView
                android:id="@+id/tv_realm_currency_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/tv_realm_currency"
                android:layout_toEndOf="@id/iv_serenitea_pot"
                android:singleLine="true"
                android:text="@string/realm_currency"
                android:textColor="@color/widget_font_main"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_realm_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/widget_sample_coin"
                android:textColor="@color/widget_font_main"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_realm_currency_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tv_realm_currency_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="18dp"
                android:layout_toStartOf="@id/tv_realm_currency_time"
                android:singleLine="true"
                android:text="@string/replenished"
                android:textColor="@color/widget_font_main"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_realm_currency_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:singleLine="true"
                android:text="@string/widget_sample_time"
                android:textColor="@color/widget_font_main"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_transformer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/iv_transformer"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_paratransformer" />

            <TextView
                android:id="@+id/tv_transformer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/tv_transformer"
                android:layout_toEndOf="@id/iv_transformer"
                android:singleLine="true"
                android:text="@string/parametric_transformer"
                android:textColor="@color/widget_font_main"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_transformer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/widget_ui_transformer_cooldown"
                android:textColor="@color/widget_font_main"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_expedition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/iv_warp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_warp_point" />

            <TextView
                android:id="@+id/tv_expedition_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/tv_expedition_time"
                android:layout_toEndOf="@id/iv_warp"
                android:singleLine="true"
                android:text="@string/expedition_settled"
                android:textColor="@color/widget_font_main"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_expedition_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/widget_sample_time"
                android:textColor="@color/widget_font_main"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/llDisable"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/llBody"
        android:layout_alignTop="@+id/llBody"
        android:layout_alignEnd="@+id/llBody"
        android:layout_alignBottom="@+id/llBody"
        android:gravity="center"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:background="@drawable/rounded_square_sys" />

        <TextView
            android:id="@+id/tv_disable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/not_logged_in"
            android:textColor="@color/widget_font_main"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>
